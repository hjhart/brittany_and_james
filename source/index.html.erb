    var fadeInHeader = 0.4 * 1000;
    var fadeInCard = 3 * 1000;
    var fadeInInput = 6 * 1000;
    var fadeToCard2 = 10 * 1000;

    setTimeout(function() {
        $('#head_honcho').fadeIn(fadeTime)
    }, fadeInHeader);

    setTimeout(function() {
        $("#card_1").fadeIn(fadeTime);
    }, fadeInCard)

