        $("input").fadeTo(fadeTime, 1);
    }, fadeInInput)

    setTimeout(function() {
        $("#card_1").fadeOut(fadeTime)
    }, fadeToCard2)

    setTimeout(function() {
        $("#card_2").fadeIn(fadeTime)
    }, fadeToCard2 + fadeTime)

